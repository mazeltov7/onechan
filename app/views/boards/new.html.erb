<div class="wrapper wrapper__bg">
  <div class="container">
    <%= link_to 'スレッド一覧に戻る', boards_path %>
    <hr>
    <h1>Boards#new</h1>
    <% if @board.errors.any? %>
        <%= @board.errors.full_messages %>
    <% end %>
    <div class="panel form">
      <%= form_for @board do |f| %>
      <div>
        <div class="form--label">
          タイトル：
        </div>
        <div class="form--input">
          <%= f.text_field :title %>
        </div>
      </div>
          <div>
            <div class="form--label">
              作成者名：
            </div>
            <div class="form--input">
              <%= f.text_field :editor %>
            </div>
          </div>
          <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>


